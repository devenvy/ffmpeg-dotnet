<Project>
  <Target Name="CopyFFmpegBinaries" AfterTargets="Build">
    <ItemGroup>
      <_FFmpegFiles Include="$(MSBuildThisFileDirectory)..\ffmpeg\**\*" />
    </ItemGroup>
    <Copy SourceFiles="@(_FFmpegFiles)"
          DestinationFiles="@(_FFmpegFiles->'$(OutDir)ffmpeg\%(RecursiveDir)%(Filename)%(Extension)')"
          SkipUnchangedFiles="true" />
  </Target>
</Project>
